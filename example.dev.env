# Production environment variables
# Copy this file to .env and update the values

# Database Configuration
DB_NAME=example
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_HOST=localhost
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/example
# Application Configuration
NODE_ENV=development # development or production
APP_PORT=3000
PORT=5001
# Leave VITE_BACKEND_URL empty for production (frontend and backend on same server)
# For development with separate servers, set to http://localhost:5001
VITE_BACKEND_URL=http://localhost:5001

# Security (generate secure random strings)
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Optional: CORS settings
CORS_ORIGIN=http://localhost:3000

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100